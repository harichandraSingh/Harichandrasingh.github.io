<script>
// Nepal Time
function updateNepalTime(){
    const now=new Date();
    const npt=now.toLocaleString("en-US",{timeZone:"Asia/Kathmandu"});
    document.getElementById("nepalTime").innerHTML=npt;
}
setInterval(updateNepalTime,1000);

// Countdown
function updateCountdown(){
    const today=new Date();
    let year=today.getFullYear();
    let birthday=new Date(`February 24, ${year} 00:00:00`);
    if(today>birthday){birthday=new Date(`February 24, ${year+1} 00:00:00`)}
    const diff=birthday-today;
    const d=Math.floor(diff/(1000*60*60*24));
    const h=Math.floor((diff/(1000*60*60))%24);
    const m=Math.floor((diff/1000/60)%60);
    document.getElementById("countdown").innerHTML=
    `‚è≥ ${d} Days ${h} Hours ${m} Minutes Remaining`;
}
setInterval(updateCountdown,1000);

// Cake
function cutCake(){
    document.getElementById("cakeMessage").innerHTML="üéâ Cake Cut Successfully! Happy Birthday My Love ‚ù§Ô∏è";
    startFireworks();
}

// Gift
function openGift(){
    document.getElementById("giftMessage").innerHTML="üíñ My greatest gift to you is my lifetime love and commitment.";
    startFireworks();
}

// Proposal Secret
let clicks=0;
document.getElementById("secretName").addEventListener("click",function(){
    clicks++;
    if(clicks===5){
        document.getElementById("proposalModal").classList.add("active");
        startFireworks();
    }
});
function closeProposal(){
    document.getElementById("proposalModal").classList.remove("active");
}

// Music
function playMusic(){
    document.getElementById("bgMusic").play();
}

// Fireworks
const canvas=document.getElementById("fireworks");
const ctx=canvas.getContext("2d");
canvas.width=window.innerWidth;
canvas.height=window.innerHeight;
let particles=[];

function startFireworks(){
    for(let i=0;i<150;i++){ 
        particles.push({
            x:Math.random()*canvas.width,
            y:Math.random()*canvas.height,
            size:Math.random()*4+2,
            speed:Math.random()*3+2
        });
    }
    animateFireworks();
}
function animateFireworks(){
    ctx.clearRect(0,0,canvas.width,canvas.height);
    ctx.fillStyle="white";
    particles.forEach(p=>{
        ctx.beginPath();
        ctx.arc(p.x,p.y,p.size,0,Math.PI*2);
        ctx.fill();
        p.y+=p.speed;
        if(p.y>canvas.height)p.y=0;
    });
    requestAnimationFrame(animateFireworks);
}
</script>

